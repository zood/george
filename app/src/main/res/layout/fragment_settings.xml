<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <xyz.zood.george.widget.SlidableCL
        android:id="@+id/settings_view"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">
        <View
            android:id="@+id/status_bar_placeholder"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="1dp"
            android:outlineProvider="none"
            android:background="#9999"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/back"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_chevron_left_24dp"
            app:iconGravity="textStart"
            app:iconTint="@color/black_80"
            app:iconSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_bar_placeholder"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/screen_title"
            android:text="@string/settings"
            style="@style/Zood.Headline6"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <androidx.constraintlayout.widget.ConstraintLayout
            tools:background="@android:color/white"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/profile_item"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <io.pijun.george.view.AvatarView
                android:id="@+id/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:id="@+id/username"
                tools:text="username"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textSize="18sp"
                android:lineHeight="25sp"
                android:textColor="@color/black_80"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintBottom_toTopOf="@+id/detail"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute" />
            <TextView
                android:id="@+id/detail"
                android:text="@string/tap_to_change_avatar"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/black_40"
                android:lineSpacingExtra="7sp"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/divider"
                android:background="@color/black_20"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/gap"
            app:layout_constraintTop_toBottomOf="@id/profile_item"
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            app:layout_constraintTop_toBottomOf="@id/gap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </xyz.zood.george.widget.SlidableCL>
</layout>